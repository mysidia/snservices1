CFLAGS=@CFLAGS@ -Wall -I@basedir@ -I@include@ -I@basedir@/md5
LDFLAGS=@LIBS@ @MD5CRYPT@
MD5=md5pw
RM=@RM@

all: crypt $(MD5)

crypt: crypt.o

$(MD5): mkmd5.o
	$(CC) -o $(MD5) -O mkmd5.o $(LDFLAGS)

clean:
	$(RM) -f crypt $(MD5) mkmd5.o crypt.o

distclean: clean
	$(RM) -f Makefile
